<VAST version="3.0">
  <Ad id="1234">
    <InLine>
      <AdSystem>Acme Ad Server</AdSystem>
      <AdTitle>Example Audio Ad</AdTitle>
      <Impression id="audio_impression">
        <![CDATA[https://example.com/audio_impression]]>
      </Impression>
      <Creatives>
        <Creative>
          <Linear>
            <Duration>00:00:15</Duration>
            <MediaFiles>
              <MediaFile type="audio/mp4" bitrate="128" delivery="progressive" width="0" height="0">
                <![CDATA[https://example.com/welcome.mp3]]>
              </MediaFile>
              <MediaFile type="audio/flac" bitrate="256" delivery="progressive" width="0" height="0">
                <![CDATA[https://example.com/hello.mp3]]>
              </MediaFile>
            </MediaFiles>
          </Linear>
        </Creative>
        <Creative>
          <CompanionAds>
            <Companion id="1234" width="300" height="250">
              <StaticResource creativeType="image/png">
                <![CDATA[https://example.com/companion.png]]>
              </StaticResource>
              <TrackingEvents>
                <Tracking event="creativeView">
                  <![CDATA[https://example.com/companion_view]]>
                </Tracking>
              </TrackingEvents>
              <CompanionClickThrough><![CDATA[http://example.com/companion_landing]]></CompanionClickThrough>
            </Companion>
            <Companion id="5678" width="728" height="90">
              <IFrameResource>
                <![CDATA[https://example.com/companion.html]]>
              </IFrameResource>
              <TrackingEvents>
                <Tracking event="creativeView">
                  <![CDATA[https://example.com/companion_view]]>
                </Tracking>
              </TrackingEvents>
              <CompanionClickThrough><![CDATA[http://example.com/companion_landing_offset]]></CompanionClickThrough>
            </Companion>
            <Companion id="abcd" width="999" height="190">
              <HTMLResource><![CDATA[<html><body>I'm a companion</body></html>]]></HTMLResource>
              <CompanionClickTracking><![CDATA[https://example.com/click-tracking-url]]></CompanionClickTracking>
            </Companion>
          </CompanionAds>
        </Creative>
      </Creatives>
      <Extensions>
        <Extension type="AdVerifications">
          <AdVerifications>
            <Verification>
              <JavaScriptResource apiFramework="VPAID">
                <![CDATA[http://example.com/vpaid.js]]>
              </JavaScriptResource>
            </Verification>
          </AdVerifications>
        </Extension>
        <Extension type="AdVerifications">
          <AdVerifications>
            <Verification>
              <JavaScriptResource apiFramework="OMID">
                <![CDATA[http://example.com/omid.js]]>
              </JavaScriptResource>
            </Verification>
          </AdVerifications>
        </Extension>
      </Extensions>
    </InLine>
  </Ad>
</VAST>
               
